<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/normal_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/home_top_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/home_ico_city"
            android:drawablePadding="@dimen/little_sapce"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="选择"
            android:textColor="@color/white"
      />

        <TextView
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/img_search_restaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_home_search_shape"
            android:drawableLeft="@drawable/ic_home_search"
            android:drawablePadding="@dimen/little_sapce"
            android:paddingBottom="7dp"
            android:paddingLeft="22dp"
            android:paddingRight="14dp"
            android:paddingTop="7dp"
            android:text="商户名，地点等...        "
            android:textColor="@color/white"
             />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.example.administrator.Fanpul.ui.view.VerticalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_20"
                >
	 	 		<include layout="@layout/index_home_list9" /> 
	 	 		
                <include layout="@layout/index_home_list1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_18" />

                <!--<include layout="@layout/line_view"/>-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_3"
                    android:background="@color/normal_bg_color_litter"/>
                  
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                  
                <!-- <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/found_icon_friend" />-->



                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:drawableLeft="@drawable/found_icon_friend"
                         android:drawablePadding="@dimen/dp_16"
                         android:padding="@dimen/normal_space"
                         android:text="@string/target_string"
                         android:textSize="@dimen/size18" />
                 </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_3"
                    android:background="@color/normal_bg_color_litter"/>
              <include layout="@layout/index_home_list10" />

            </LinearLayout>
       </com.example.administrator.Fanpul.ui.view.VerticalScrollView>
        <!-- title shadow -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/title_shadow_shape" />

        <LinearLayout
            android:id="@+id/index_home_tips_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/home_navibar_tips_bg"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_30"
                android:drawableLeft="@drawable/home_navibar_tips_icon_comment"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:text="写点评" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:drawableLeft="@drawable/home_navibar_tips_icon_store"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:text="添加商户" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:drawableLeft="@drawable/home_navibar_tips_icon_scan"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:text="扫一扫" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>