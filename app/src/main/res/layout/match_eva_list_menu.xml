<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="@dimen/dip_5"
    android:layout_marginBottom="@dimen/dip_5"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/eva_menu_image"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:src="@drawable/default_menu"
        android:textColor="#555555"
        android:textSize="@dimen/size14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eva_menu_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxLines="1"
            android:paddingTop="@dimen/dip_15"
            android:paddingLeft="@dimen/size20"
            android:layout_marginBottom="@dimen/dip_20"
            android:text="菜的名字"
            android:textColor="@color/personal_textview"
            android:textSize="@dimen/confirmorder_content" />

        <RadioGroup
            android:id="@+id/upada_radiogroup"
            android:paddingLeft="@dimen/size20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/menu_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/eva_menu_checked"
                android:drawablePadding="@dimen/dip_6"
                android:text="赞"
                android:textColor="@color/confirmorder_textview"
                android:textSize="@dimen/confirmorder_content" />

            <RadioButton
                android:id="@+id/menu_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dip_10"
                android:background="@color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/eva_menu_checked"
                android:drawablePadding="@dimen/dip_6"
                android:text="—"
                android:textColor="@color/confirmorder_textview"
                android:textSize="@dimen/confirmorder_content" />


            <RadioButton
                android:id="@+id/menu_worse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dip_10"
                android:background="@color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/eva_menu_checked"
                android:drawablePadding="@dimen/dip_6"
                android:text="踩"
                android:textColor="@color/confirmorder_textview"
                android:textSize="@dimen/confirmorder_content" />

        </RadioGroup>
    </LinearLayout>

</LinearLayout>
