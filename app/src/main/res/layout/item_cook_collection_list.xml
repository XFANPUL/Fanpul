<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_view_bg_click_white_gray"
    android:clickable="true">

    <ImageView
        android:id="@+id/imgv_src"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:src="@mipmap/icon_img_default"/>

    <TextView
        android:id="@+id/text_name"
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@+id/imgv_src"
        android:textColor="@color/gray1"
        android:textSize="@dimen/size18"/>

    <TextView
        android:id="@+id/text_tag"
        android:text="tag,tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@+id/imgv_src"
        android:layout_below="@+id/text_name"
        android:textColor="@color/black_alpha_30"
        android:textSize="@dimen/size16"/>

    <RelativeLayout
        android:id="@+id/relative_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/selector_view_bg_click_white_gray"
        android:clickable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_more"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/imgv_src"
        android:background="@color/black_alpha_12">
    </View>

</RelativeLayout>