<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/affordshop_detail_border"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dip_6"
        android:paddingRight="@dimen/dip_6">

        <LinearLayout
            android:id="@+id/top_LytTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_logo"
                android:padding="@dimen/dip_10"
                android:text="必胜客"
                android:textColor="@color/personal_textview"
                android:textSize="@dimen/personal_textview" />


            <TextView
                android:id="@+id/is_anonymity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_10"
                android:text="匿名评价"
                android:textColor="@color/subscribe_item_selected_stroke_night"
                android:textSize="@dimen/personal_texthint" />
        </LinearLayout>

        <include layout="@layout/line_view" />

        <LinearLayout
            android:id="@+id/lytPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_img_shop_head"
                android:layout_width="@dimen/dip_40"
                android:layout_height="@dimen/dip_40"
                android:layout_marginBottom="@dimen/dip_12"
                android:layout_marginRight="@dimen/dip_16"
                android:layout_marginTop="@dimen/dip_12"
                android:background="@drawable/home_image_border"
                android:padding="@dimen/dip_1"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_list" />

            <LinearLayout
                android:id="@+id/luoutImgArray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dip_10"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="张三"
                        android:textColor="@color/subscribe_item_text_color_normal_night"
                        android:textSize="@dimen/size14" />

                    <TextView
                        android:id="@+id/eva_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="2017.05.12"
                        android:textColor="@color/subscribe_item_text_color_pressed"
                        android:textSize="@dimen/size14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dip_5"
                    >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dip_10"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="商家"
                        android:textColor="@color/subscribe_item_text_color_normal_night"
                        android:textSize="@dimen/size12" />

                    <RatingBar
                        android:id="@+id/ratBarSum"
                        style="@style/evaRatingBar"
                        android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:isIndicator="true"
                        android:gravity="center_vertical"
                        android:numStars="5"
                        android:rating="5"
                        android:stepSize="0.5" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eva_rating_menu"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="口味：5星"
                        android:textColor="@color/subscribe_item_text_color_normal_night"
                        android:textSize="@dimen/size12" />

                    <TextView
                        android:id="@+id/eva_rating_speed"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="上菜：5星"
                        android:textColor="@color/subscribe_item_text_color_normal_night"
                        android:textSize="@dimen/size12" />

                    <TextView
                        android:id="@+id/eva_rating_server"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="服务：4.5星"
                        android:textColor="@color/subscribe_item_text_color_normal_night"
                        android:textSize="@dimen/size12" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:gravity="top"
                    android:hint="等待加载该用户的评价"
                    android:maxLength="100"
                    android:maxLines="3"
                    android:minLines="3"
                    android:layout_marginTop="@dimen/dip_5"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_16"
                    android:paddingRight="@dimen/dip_16"
                    android:paddingTop="@dimen/dip_5"
                    android:paddingBottom="@dimen/dip_16"
                    android:textColor="@color/personal_textview"
                    android:textSize="@dimen/size14"
                    android:editable="false"/>


            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dip_6"
                android:text="消费金额:"
                android:textColor="@color/personal_textview"
                android:textSize="@dimen/personal_texthint" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dip_10"
                android:paddingTop="@dimen/dip_10"
                android:text="￥0.0"
                android:textColor="@color/personal_textview"
                android:textSize="@dimen/personal_texthint" />

            <Button
                android:id="@+id/btnEvaShare"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dip_10"
                android:background="@drawable/btn_order"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dip_8"
                android:paddingLeft="@dimen/dip_20"
                android:paddingRight="@dimen/dip_20"
                android:paddingTop="@dimen/dip_8"
                android:text="分享"
                android:textColor="@drawable/btn_order_clicktext"
                android:textSize="@dimen/personal_texthint"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnEvaDelete"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dip_10"
                android:background="@drawable/btn_order_cancel_bg"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dip_8"
                android:paddingLeft="@dimen/dip_15"
                android:paddingRight="@dimen/dip_15"
                android:paddingTop="@dimen/dip_8"
                android:text="删除"
                android:textColor="@drawable/btn_order_cancel"
                android:textSize="@dimen/personal_texthint"

                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

