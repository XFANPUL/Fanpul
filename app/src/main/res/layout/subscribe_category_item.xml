<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_subscribe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/minHeight"
    android:minWidth="@dimen/minWidth" >

    <TextView
        android:id="@+id/text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/subscribe_item_bg"
        android:gravity="center"
        android:minHeight="@dimen/minHeight"
        android:minWidth="@dimen/minWidth"
        android:textColor="@drawable/subscribe_item_text_color"
        android:textSize="@dimen/size14"
        android:layout_centerVertical="true" />
    <!-- android:layout_margin="5dip" -->

    <ImageView
        android:id="@+id/icon_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/channel_new"
        android:visibility="gone" />

</RelativeLayout>