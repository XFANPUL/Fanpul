<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_ingredients"
        android:text="@string/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:textSize="@dimen/size20"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/relative_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10">

        <View
            android:id="@+id/view_circle1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/shape_circle_orange">
        </View>

        <TextView
            android:id="@+id/text_ingredients_content1"
            android:text="ingredients content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/view_circle1"
            android:textSize="@dimen/size18"
            android:textColor="@color/black_alpha_30"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10">

        <View
            android:id="@+id/view_circle2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/shape_circle_orange">
        </View>

        <TextView
            android:id="@+id/text_ingredients_content2"
            android:text="ingredients content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/view_circle2"
            android:textSize="@dimen/size18"
            android:textColor="@color/black_alpha_30"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10">

        <View
            android:id="@+id/view_circle3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/shape_circle_orange">
        </View>

        <TextView
            android:id="@+id/text_ingredients_content3"
            android:text="ingredients content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/view_circle3"
            android:textSize="@dimen/size18"
            android:textColor="@color/black_alpha_30"/>

    </RelativeLayout>

    <TextView
        android:text="@string/methods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:textSize="@dimen/size20"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>