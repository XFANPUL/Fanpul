<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_comment_userpic"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/main_index_my_pressed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_comment_username"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="用户昵称" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RatingBar
                    android:id="@+id/shop_comment_ratBarShop"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.1"
                    />

                <TextView
                    android:id="@+id/shop_comment_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="评论的时间" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/shop_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_15"
        android:text="评论内容" />

    <include layout="@layout/line_view" />
</LinearLayout>