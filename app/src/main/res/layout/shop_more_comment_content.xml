<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dip_10">

        <ImageView
            android:id="@+id/shop_comment_userpic"
            android:layout_width="@dimen/dip_40"
            android:layout_height="@dimen/dip_40"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dip_12"
            android:layout_marginRight="@dimen/dip_16"

            android:background="@drawable/home_image_border"
            android:padding="@dimen/dip_1"
            android:scaleType="fitXY"
            android:src="@drawable/main_index_my_pressed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shop_comment_username"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_marginRight="@dimen/dip_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="张三"
                    android:textColor="@color/subscribe_item_text_color_normal_night"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/shop_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="2017.05.12"
                    android:textColor="@color/subscribe_item_text_color_pressed"
                    android:textSize="@dimen/size14" />

            </LinearLayout>

            <EditText
                android:id="@+id/shop_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_15"
                android:background="@drawable/edittext"
                android:editable="false"
                android:gravity="top"
                android:hint="等待加载该用户的评价"
                android:maxLength="100"
                android:maxLines="6"
                android:minLines="1"
                android:paddingBottom="@dimen/dip_16"
                android:paddingLeft="@dimen/dip_16"
                android:paddingRight="@dimen/dip_16"
                android:paddingTop="@dimen/dip_5"
                android:textColor="@color/personal_textview"
                android:textSize="@dimen/size14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shop_comment_rating_menu"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="口味：5星"
                    android:textColor="@color/subscribe_item_text_color_normal_night"
                    android:textSize="@dimen/size12" />

                <TextView
                    android:id="@+id/shop_comment_rating_speed"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="上菜：5星"
                    android:textColor="@color/subscribe_item_text_color_normal_night"
                    android:textSize="@dimen/size12" />

                <TextView
                    android:id="@+id/shop_comment_rating_server"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="服务：4.5星"
                    android:textColor="@color/subscribe_item_text_color_normal_night"
                    android:textSize="@dimen/size12" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>